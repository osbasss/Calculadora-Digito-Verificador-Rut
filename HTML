    <script>
        function calcularDigitoVerificador() {
            var rutSinDigito = document.getElementById("rut").value;
            var multiplicadores = [2, 3, 4, 5, 6, 7];
            var rutInvertido = rutSinDigito.split('').reverse();
            var suma = 0;
            var indiceMultiplicador = 0;

            for (var i = 0; i < rutInvertido.length; i++) {
                suma += parseInt(rutInvertido[i]) * multiplicadores[indiceMultiplicador];
                indiceMultiplicador = (indiceMultiplicador + 1) % multiplicadores.length;
            }

            var resto = suma % 11;
            var digitoVerificador = resto > 1 ? 11 - resto : 0;

            document.getElementById("resultado").innerText = "El dígito verificador es: " + digitoVerificador;
        }
    </script>
